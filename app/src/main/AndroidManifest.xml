<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.projeto.personal_delivery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/apresentacao_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.auth_activities.CriaContaActivity"/>
        <activity android:name=".activities.auth_activities.LoginActivity"/>
        <activity android:name=".activities.auth_activities.RedefineSenhaActivity"/>
        <activity android:name=".activities.EntradaActivity" android:theme=
            "@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".activities.PrincipalActivity" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/AppThemeTelaCheia">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>