<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <Button
        android:id="@+id/btLogaConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/formato_campo"
        android:textStyle="bold"
        android:text="Acessar minha conta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintLeft_toLeftOf="@id/inputSenha_login"
        app:layout_constraintRight_toRightOf="@id/inputSenha_login"
        app:layout_constraintTop_toBottomOf="@+id/inputSenha_login"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/inputSenha_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail_login"
        app:layout_constraintVertical_bias="0.202"
        />

    <EditText
        android:id="@+id/inputEmail_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:inputType="textPersonName"
        android:hint="Email"
        app:layout_constraintBottom_toTopOf="@id/inputSenha_login"
        app:layout_constraintEnd_toEndOf="@+id/inputSenha_login"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/inputSenha_login"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLinkTelaAlteraSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Esqueci minha senha"
        android:textSize="14sp"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLogaConta" />

    <TextView
        android:id="@+id/textLinkTelaCriaConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ã‰ novo aqui? Crie uma conta ;"
        android:textSize="20sp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLinkTelaAlteraSenha" />

    <TextView
        android:id="@+id/btLogaContaGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/formato_campo"
        android:gravity="center|center_vertical"
        android:text="Minha Conta Google"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/textLinkTelaCriaConta"
        app:layout_constraintStart_toStartOf="@id/textLinkTelaCriaConta"
        app:layout_constraintTop_toBottomOf="@id/textLinkTelaCriaConta" />

</androidx.constraintlayout.widget.ConstraintLayout>